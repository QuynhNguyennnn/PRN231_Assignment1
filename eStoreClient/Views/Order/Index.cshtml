@using Microsoft.AspNetCore.Http;
@model IEnumerable<BusinessObject.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    if (@Context.Session.GetInt32("MemberId") != null)
    {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
    }
}
<form asp-action="SortOrder" id="myForm">
    <label for="dateStart">Date start:</label>
    <input type="date" name="dateStart" id="dateStart">
    <label for="dateEnd">Date End:</label>
    <input type="date" name="dateEnd" id="dateEnd">
    <input type="submit" value="Submit">
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.City)
                </td>
                @{
                    if (@Context.Session.GetInt32("MemberId") == null)
                    {
                        //memberid = null -> view only
                    }

                    if (@Context.Session.GetInt32("MemberId") != null && @Context.Session.GetString("Roles") == "admin")
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new {  id=item.OrderId }) |
                            @Html.ActionLink("Edit", "Edit", new {  id=item.OrderId }) |
                            @Html.ActionLink("Delete", "Delete", new {  id=item.OrderId })
                        </td>
                    }
                    if (@Context.Session.GetInt32("MemberId") != null && @Context.Session.GetString("Roles") == "member"
                            && @Context.Session.GetInt32("MemberId") == item.MemberId)
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new {  id=item.OrderId }) |
                            @Html.ActionLink("Edit", "Edit", new {  id=item.OrderId })
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
<script>
    const myForm = document.getElementById("myForm");
    const dateStartInput = document.getElementById("dateStart");
    const dateEndInput = document.getElementById("dateEnd");

    myForm.addEventListener("submit", function (event) {
        event.preventDefault();

        // Lấy giá trị từ input fields
        const dateStartValue = new Date(dateStartInput.value);
        const dateEndValue = new Date(dateEndInput.value);

        // Kiểm tra điều kiện
        if (dateEndValue < dateStartValue) {
            // Gán giá trị của dateStart cho dateEnd
            dateEndInput.value = dateStartInput.value;
        }

        // Tiếp tục với việc gửi form (hoặc thực hiện xử lý khác nếu cần)
        myForm.submit();
    });
</script>