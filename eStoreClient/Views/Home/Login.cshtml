@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Login form</h3>
<form method="post" class="form-control" asp-action="Login" asp-controller="Home">
    <div class="text-center">
        <label for="email">Email</label>
        <input id="email" name="email" placeholder="Your email" type="text" required />
    </div>
    <div class="text-center">
        <label for="password">Password </label>
        <input id="password" name="password" placeholder="Your password" type="password" required />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" name="submit">Login</button>
    </div>
</form>
